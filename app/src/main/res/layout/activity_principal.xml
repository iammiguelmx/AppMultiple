<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrincipalActivity" android:background="#2B72B4">

    <Button
            android:text="INFORMACIÓN🎉"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:id="@+id/btnInfor" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="ACERCA🤩"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcerca" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/btnAyuda"/>
    <Button
            android:text="AYUDA🤓"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:id="@+id/btnAyuda" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/btnInfor"/>
    <Button
            android:text="SALIR🖐"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalir" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/btnAcerca"/>
</androidx.constraintlayout.widget.ConstraintLayout>